<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Software_Technology.Sing_In_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Software_Technology"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid>

        <StackPanel Orientation="Vertical" Spacing="6" Margin="0, 10, 0 ,0">
            <FontIcon Glyph="&#xE716;" HorizontalAlignment="Center" FontSize="50" Margin="0,0,0, 10"/>
            <TextBlock  Text="Ψευδώνυμο"/>
            <TextBox x:Name="username" x:FieldModifier="internal"/>
            <TextBlock Text="Κωδικός" Margin="0, 5, 0,0"/>
            <PasswordBox  x:Name="password" x:FieldModifier="internal"/>
            <TextBlock Text="Ή πραγματοποιήστε Εγγραφή" Margin="0, 20, 0,10" TextAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
            <Button HorizontalAlignment="Center" Click="Pop_Up_Click">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE70F;"/>
                    <TextBlock Text="Εγγραφή" FontSize="15"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Page>
